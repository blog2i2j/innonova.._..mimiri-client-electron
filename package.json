{
  "name": "mimiri-notes",
  "productName": "Mimiri Notes",
  "version": "2.5.71",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron . --hidden",
    "update-bundle": "node scripts/update-bundle.mjs",
    "download-bundle": "node scripts/download-bundle.mjs",
    "unpack-bundle": "node scripts/unpack-bundle.mjs",
    "update-flatpak": "node scripts/update-flatpak.mjs",
    "dist": "npm run build && electron-builder",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "postinstall": "electron-builder install-app-deps",
    "make-iconset": "cd assets && iconutil -c icns icon.iconset",
    "make-background": "cd assets && tiffutil -cathidpicheck dmg-background.png dmg-background@2x.png -out background.tiff",
    "rename-packages": "node scripts/rename-packages.mjs",
    "generate-sources": "node scripts/generate-sources.mjs",
    "arm-wayland": "node scripts/arm-wayland.mjs"
  },
  "author": "innonova GmbH",
  "license": "GPL-2.0-only",
  "title": "Mimiri Nots",
  "summary": "Secure and organized notes",
  "description": "Keep trivial, technical, confidential notes and credentials in one well structured and highly secure place, without having to worry about what needs to be secured how or where.",
  "dependencies": {
    "dbus-native": "^0.4.0",
    "electron-squirrel-startup": "1.0.1",
    "winreg": "1.2.5"
  },
  "devDependencies": {
    "@types/node": "24.6.1",
    "@types/shelljs": "0.8.17",
    "@types/winreg": "1.2.36",
    "electron": "38.2.1",
    "electron-builder": "26.0.12",
    "js-base64": "3.7.8",
    "js-yaml": "4.1.0",
    "shelljs": "0.10.0",
    "ssri": "12.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "overrides": {
    "prebuild-install": {
      "tar-fs": "^2.1.3"
    }
  },
  "build": {
    "icon": "assets/icon.png",
    "snap": {
      "autoStart": true,
      "allowNativeWayland": true,
      "category": "Productivity;Utilities"
    },
    "files": [
      "app",
      "dist/**/*.js",
      "main.js",
      "preload.js",
      "package.json",
      "assets/icon.png",
      "assets/tray-icon.png",
      "assets/tray-icon-dark.png",
      "assets/tray-icon-symbolic.png",
      "assets/tray-icon-symbolic@2x.png"
    ]
  }
}
